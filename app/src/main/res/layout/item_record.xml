<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_topleft_bottomright_30"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/item_record_text_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="四川大学\n沈阳软件园"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_record_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#dfdfdf"
        app:layout_constraintTop_toBottomOf="@id/item_record_text_position" />

    <ImageView
        android:id="@+id/item_record_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_bg_bus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_record_view_1" />

    <TextView
        android:id="@+id/item_record_text_changeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="城际间转乘2次"
        android:textColor="#666"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/item_record_text_comfort"
        app:layout_constraintLeft_toRightOf="@id/item_record_img"
        app:layout_constraintTop_toTopOf="@id/item_record_img" />

    <TextView
        android:id="@+id/item_record_text_comfort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="舒适度为90.5分"
        android:textColor="#666"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/item_record_text_money"
        app:layout_constraintLeft_toLeftOf="@id/item_record_text_changeTime"
        app:layout_constraintTop_toBottomOf="@id/item_record_text_changeTime" />

    <TextView
        android:id="@+id/item_record_text_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥1005.2"
        android:textColor="#666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/item_record_img"
        app:layout_constraintLeft_toLeftOf="@id/item_record_text_changeTime"
        app:layout_constraintTop_toBottomOf="@id/item_record_text_comfort" />

    <TextView
        android:id="@+id/item_record_text_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起"
        android:textColor="#666"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_record_text_money"
        app:layout_constraintLeft_toRightOf="@id/item_record_text_money" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="路径点赞人数"
        android:textColor="#666"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_record_img_img_love"
        app:layout_constraintRight_toLeftOf="@id/item_record_img_img_love"
        app:layout_constraintTop_toTopOf="@id/item_record_img_img_love" />

    <ImageView
        android:id="@+id/item_record_img_img_love"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_love"
        app:layout_constraintBottom_toTopOf="@id/item_record_view_1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/item_record_text_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="124"
        android:textColor="#fff"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@id/item_record_img_img_love"
        app:layout_constraintLeft_toLeftOf="@id/item_record_img_img_love"
        app:layout_constraintRight_toRightOf="@id/item_record_img_img_love"
        app:layout_constraintTop_toTopOf="@id/item_record_img_img_love" />

    <TextView
        android:id="@+id/item_record_text_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_4"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="取消收藏"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@id/item_record_img_img_love"
        app:layout_constraintTop_toTopOf="@id/item_record_text_money" />
</android.support.constraint.ConstraintLayout>