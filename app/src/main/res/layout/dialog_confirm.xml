<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/dialog_confirm_linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dialog_confirm_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_bee_collection" />

        <TextView
            android:id="@+id/dialog_confirm_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏提示"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/dialog_confirm_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#000"
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_linear_1" />

    <TextView
        android:id="@+id/dialog_confirm_text_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="您是否收藏该路径？"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_view_1" />

    <TextView
        android:id="@+id/dialog_confirm_text_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_green_4"
        android:padding="4dp"
        android:text="收藏点赞"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_confirm_text_cancel"
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_text_hint" />

    <TextView
        android:id="@+id/dialog_confirm_text_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_papper_yj_4"
        android:padding="4dp"
        android:text="取消操作"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/dialog_confirm_text_confirm"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_confirm_text_confirm" />


</android.support.constraint.ConstraintLayout>