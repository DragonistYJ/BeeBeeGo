<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity">

    <LinearLayout
        android:id="@+id/welcome_linear_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智慧路线"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BeeBeeGo"
            android:textColor="#615eea"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_text_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="城市交通·城际出行·地图导航·个性化"
        android:textColor="#8f8f8f"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_linear_title" />

    <ImageView
        android:id="@+id/welcome_img_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/bg_welcome"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/welcome_linear_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_text_introduce"
        app:layout_constraintWidth_percent="0.8" />

    <ImageView
        android:id="@+id/welcome_img_bee"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:background="@mipmap/ic_welcome_location"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_bee_location"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/welcome_img_bg"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintLeft_toLeftOf="@id/welcome_img_bg"
        app:layout_constraintRight_toRightOf="@id/welcome_img_bg"
        app:layout_constraintTop_toTopOf="@id/welcome_img_bg"
        app:layout_constraintVertical_bias="0.24" />

    <ImageView
        android:id="@+id/welcome_img_flight"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_welcome_location"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        android:src="@drawable/ic_airplane"
        android:tint="#615eea"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/welcome_img_bg"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintLeft_toLeftOf="@id/welcome_img_bg"
        app:layout_constraintRight_toRightOf="@id/welcome_img_bg"
        app:layout_constraintTop_toTopOf="@id/welcome_img_bg"
        app:layout_constraintVertical_bias="0.38" />

    <ImageView
        android:id="@+id/welcome_img_subway"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_subway"
        android:tint="#615eea"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/welcome_img_bg"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintLeft_toLeftOf="@id/welcome_img_bg"
        app:layout_constraintRight_toRightOf="@id/welcome_img_bg"
        app:layout_constraintTop_toTopOf="@id/welcome_img_bg"
        app:layout_constraintVertical_bias="0.54" />

    <ImageView
        android:id="@+id/welcome_img_train"
        android:layout_width="54dp"
        android:layout_height="72dp"
        android:background="@mipmap/ic_welcome_location"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:src="@drawable/ic_train"
        android:tint="#615eea"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/welcome_img_bg"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintLeft_toLeftOf="@id/welcome_img_bg"
        app:layout_constraintRight_toRightOf="@id/welcome_img_bg"
        app:layout_constraintTop_toTopOf="@id/welcome_img_bg"
        app:layout_constraintVertical_bias="0.6" />

    <LinearLayout
        android:id="@+id/welcome_linear_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_bee_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_welcome_text"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:text="蜂行"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>