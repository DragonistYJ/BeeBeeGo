<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/insidecity_list_cons1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_green_up_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <ImageView
            android:id="@+id/insidecity_list_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:tint="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_bus" />

        <TextView
            android:id="@+id/insidecity_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/insidecity_list_icon"
            app:layout_constraintLeft_toRightOf="@id/insidecity_list_icon"
            app:layout_constraintTop_toTopOf="@id/insidecity_list_icon" />

        <TextView
            android:id="@+id/insidecity_list_guide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:text="开始导航"
            android:textColor="#fff"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/insidecity_list_cons2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_green_down_corner"
        android:paddingBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insidecity_list_cons1"
        app:layout_constraintWidth_percent="0.8">

        <ImageView
            android:id="@+id/insidecity_list_start_ic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_start"
            android:tint="#000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/insidecity_list_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/insidecity_list_start_ic"
            app:layout_constraintLeft_toRightOf="@id/insidecity_list_start_ic"
            app:layout_constraintTop_toTopOf="@id/insidecity_list_start_ic" />

        <ImageView
            android:id="@+id/insidecity_list_end_ic"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_end"
            android:tint="#000"
            app:layout_constraintLeft_toLeftOf="@id/insidecity_list_start_ic"
            app:layout_constraintTop_toBottomOf="@id/insidecity_list_start_ic" />

        <TextView
            android:id="@+id/insidecity_list_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/insidecity_list_end_ic"
            app:layout_constraintLeft_toRightOf="@id/insidecity_list_end_ic"
            app:layout_constraintTop_toTopOf="@id/insidecity_list_end_ic" />

        <TextView
            android:id="@+id/insidecity_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="dfsd"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/insidecity_list_start"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/insidecity_list_start" />

        <TextView
            android:id="@+id/insidecity_list_stops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="32423"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/insidecity_list_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/insidecity_list_end" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>